=form_for @user, html: {method: :put} do |f|
  %div
    = f.label :email
    %br/
    = f.email_field :email
  %div
    = f.label :name
    %br/
    = f.text_field :name
  %div
    = f.label :second_name
    %br/
    = f.text_field :second_name
  %div
    = f.label :birth_date
    %br/
    = f.date_select :birth_date, start_year: Time.now.year - 100 , end_year: Time.now.year, include_blank: true

  %div
    = f.submit
